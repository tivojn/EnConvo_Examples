{
  // "builds" tells Vercel how to build each part:
  "builds": [
    // Build and serve index.html from the root:
    { "src": "index.html", "use": "@vercel/static" },

    // If Latin-Vocab-Shadcn is a Next.js project (has package.json + next.config.js):
    {
      "src": "Latin-Vocab-Shadcn/package.json",
      "use": "@vercel/next"
    }

    // Or if itâ€™s just static HTML/JS/CSS, use:
    // { "src": "Latin-Vocab-Shadcn/**", "use": "@vercel/static" }
  ],
  // "routes" tells Vercel which requests map to which build:
  "routes": [
    // Serve the root index.html at "/"
    { "src": "^/$", "dest": "index.html" },

    // Route anything under /Latin-Vocab-Shadcn to that subfolder build:
    {
      "src": "^/Latin-Vocab-Shadcn/(.*)$",
      "dest": "Latin-Vocab-Shadcn/$1"
    }
  ]
}